<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sachingupta.android_smarttodolist.AddToDoCategorySelectionActivity">



    <ImageView
        android:id="@+id/categoryFood"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/category_food" />
    <ImageView
        android:id="@+id/categoryAtm"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/category_atm"
        android:layout_alignTop="@+id/categoryFood"
        android:layout_toRightOf="@+id/categoryFood"
        android:layout_toEndOf="@+id/categoryFood" />
    <ImageView
        android:id="@+id/categoryHinduTemple"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/category_hindu_temple"
        android:layout_alignTop="@+id/categoryAtm"
        android:layout_toRightOf="@+id/categoryAtm"
        android:layout_toEndOf="@+id/categoryAtm" />
    <ImageView
        android:id="@+id/categoryUniversity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/category_university"
        android:layout_alignTop="@+id/categoryHinduTemple"
        android:layout_toRightOf="@+id/categoryHinduTemple"
        android:layout_toEndOf="@+id/categoryHinduTemple" />
    <Button
        android:id="@+id/addToDoCategoryNextBtn"
        android:layout_width="wrap_content"
        android:layout_below="@+id/categoryUniversity"
        android:padding="@dimen/input_padding"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Next" />

</RelativeLayout>
