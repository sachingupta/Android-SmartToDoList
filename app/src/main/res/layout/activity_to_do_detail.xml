<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sachingupta.android_smarttodolist.ToDoDetailActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toDoDetailActivityTitle"
            android:padding="@dimen/input_padding"
            android:text="ToDo details"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/toDoDetailTitle"
            android:background="@color/inputBackground"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toDoDetailActivityTitle"
            android:padding="@dimen/input_padding"
            android:hint="Title" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/toDoDetailDescription"
            android:background="@color/inputBackground"
            android:padding="@dimen/input_padding"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toDoDetailTitle"
            android:hint="toDoDescription" />

        <EditText
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:id="@+id/toDoDetailStartTime"
            android:background="@color/inputBackground"
            android:padding="@dimen/input_padding"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toDoDetailDescription"
            android:hint="toDoStartTime" />
    <ImageView
        android:id="@+id/toDoStartDatePicker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/calender"
        android:layout_alignTop="@+id/toDoDetailStartTime"
        android:layout_toRightOf="@+id/toDoDetailStartTime"
        android:layout_toEndOf="@+id/toDoDetailStartTime" />
        <EditText
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:id="@+id/toDoDetailEndTime"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toDoDetailStartTime"
            android:background="@color/inputBackground"
            android:padding="@dimen/input_padding"
            android:hint="toDoEndTime" />
    <ImageView
        android:id="@+id/toDoEndDatePicker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/calender"
        android:layout_alignTop="@+id/toDoDetailEndTime"
        android:layout_toRightOf="@+id/toDoDetailEndTime"
        android:layout_toEndOf="@+id/toDoDetailEndTime" />
        <Button
    android:id="@+id/toDoDetailEditBtn"
    android:layout_width="wrap_content"
    android:layout_below="@+id/toDoDetailEndTime"
    android:padding="@dimen/input_padding"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:text="Edit" />
    <Button
        android:id="@+id/toDoDetailSaveBtn"
        android:layout_width="wrap_content"
        android:layout_below="@+id/toDoDetailEndTime"
        android:padding="@dimen/input_padding"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="Save" />

</RelativeLayout>
